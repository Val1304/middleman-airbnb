<% flat = data.flats[owner] %>

<!-- Inject flat data in template -->
<div class="banner-img" style="background-image: linear-gradient(0deg, rgba(0,10,10,0.1) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/paris'); height: 50vh; background-position: center; margin-bottom: 30px;">
</div>

<div class="header-flat">
  <div class="container-white">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-1">
        <div class="header-flat-details">
          <div class="header-flat-owner  text-center">
           <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-radius" %>
            <p><%= "#{owner}" %></p>
          </div>
          <div class="header-flat-name">
            <h1><%= flat.description %></h1>
            <p><%= flat.city_name %></p>
            <p class="rating">
                <i class="fa fa-star" style="color: #ffb400"></i>
                <i class="fa fa-star" style="color: #ffb400"></i>
                <i class="fa fa-star" style="color: #ffb400"></i>
                <i class="fa fa-star" style="color: #ffb400"></i>
                <i class="fa fa-star" style="color: #ffb400"></i>
            </p>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-4">
        <form action="#" >
          <h4>Book this flat</h3>
          <div class="form-group">
            <div class="row">
              <div class="col-xs-6">
                <input type="text" class="form-control" placeholder="checkin" id="checkin">
              </div>
              <div class="col-xs-6">
                <input type="text" class="form-control" placeholder="checkout">
              </div>
            </div>
          </div>
          <div class="form-group">
            <select name="" id="guests" class="form-control">
              <option value="1">1 guest</option>
              <option value="2">2 guests</option>
              <option value="3">3 guests</option>
            </select>
          </div>
          <input type="submit" class="btn btn-danger" value="Book it" style="width: 100%">
        </form>
      </div>
    </div>
  </div>
</div>

<div id="flat-description">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-10 col-sm-offset-1">
        <h3>About this flat</h3>
        <p>
          <%= flat.description %>
        </p>

        <hr>
        <div class="row" id="flat-data">
          <div class="col-xs-12 col-sm-2">
            <a>The Space</a>
          </div>
          <div class="col-xs-12 col-sm-4">
            <ul class="list-unstyled">
              <li>Accommodates:   <strong><%= flat.accomodates%></strong></li>
              <li>Bathrooms:   <strong><%= flat.bathrooms%></strong></li>
              <li>Bed Type:   <strong><%= flat.bed_type%></strong></li>
              <li>Bedrooms:   <strong><%= flat.bedrooms%></strong></li>
            </ul>
          </div>
          <div class="col-xs-12 col-sm-4">
            <ul class="list-unstyled">
              <li>beds:   <strong><%=flat.beds%></strong></li>
              <li>Property type:   <strong><%=flat.property_type%></strong></li>
              <li>Room type:   <strong><%=flat.room_type%></strong></li>
            </ul>
          </div>
        </div>
        <hr>
        <div class="row" id="flat-data">
          <div class="col-xs-12 col-sm-2">
            <a>Amenities</a>
          </div>
          <div class="col-xs-12 col-sm-4">
            <ul class="list-unstyled">
              <li><i class="fa fa-cutlery"></i><strong><%= "Kitchen" if flat.kitchen == true %></strong></li>
              <li><i class="fa fa-wifi"></i><strong> <%= " Wifi" if flat.wifi == true %></strong></li>
            </ul>
          </div>
          <div class="col-xs-12 col-sm-4">
            <ul class="list-unstyled">
              <li><i class="fa fa-desktop"></i><strong> <%= "TV" if flat.tv == true %></strong></li>
              <li><i class="fa fa-glass"></i><strong><%= "Welcome Drink" if flat.welcome_drink == true %></strong></li>
            </ul>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
